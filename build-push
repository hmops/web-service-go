pipeline {
    agent any

    environment {
        // Set environment variables as needed
        DOCKER_HUB_USERNAME = credentials('docker-hub-username')
        DOCKER_HUB_PASSWORD = credentials('docker-hub-password')
        # KUBECONFIG = credentials('kubeconfig')
    }

    stages {
        stage('Build and push image') {
            steps {
                script {
                    // Build the Docker image
                    docker.withRegistry('https://registry.hub.docker.com', DOCKER_HUB_USERNAME, DOCKER_HUB_PASSWORD) {
                        def customImage = docker.build('hosseinmohammadi/web-service-go:latest', '.')
                        // Push the Docker image to Docker Hub
                        customImage.push()
                    }
                }
            }
        }
#        stage('Deploy to Kubernetes') {
#            steps {
#                script {
#                    // Set up kubectl
#                    withCredentials([file(credentialsId: 'kubeconfig', variable: 'KUBECONFIG')]) {
#                        sh """
#                            mkdir ~/.kube
#                            cp ${KUBECONFIG} ~/.kube/config
#                            chmod 600 ~/.kube/config
#                            kubectl config use-context my-context
#                        """
#                    }
#                    // Deploy the Docker image to the Kubernetes cluster
#                    sh 'kubectl apply -f deployment.yaml'
#                }
#            }
#        }
    }
}

